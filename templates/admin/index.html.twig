{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="display-4">Hello Admin!</h1>

    <p  class="lead">Manage all users</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>User</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td colspan="3" class="text-center">
                    <a class="btn btn-success" href="{{ path('user_create') }}">Add new user</a>
                </td>
            </tr>
        </tfoot>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a class="btn btn-info btn-sm" title="Edit"
                       href="{{ path('user_edit', { id: user.id }) }}">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-info btn-sm btn-warning" title="Delete"
                       href="{{ path('user_delete', { id: user.id }) }}">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
